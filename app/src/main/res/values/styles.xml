<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#000D3A</item>
        <item name="colorPrimaryDark">#708EF8</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ConstraintParents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ConstraintCards" parent="ConstraintParents">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">0dp</item>
    </style>
    /////////////////////////////////////////////////////////////////LAYOUTS
    <style name="Card">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">#C4B6DD</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StatsCards" parent="Card">
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>


    <style name="LinerLayoutCard_Normal" parent="Card">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginRight">17dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="Layouts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    /////////////////////////////////////////////////////////////////TEXT

    <style name="Advice">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text10" parent="TextTitle">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TextValue" parent="TextTitle">
        <item name="android:padding">1dp</item>
    </style>
    <style name="StatHints" parent="TextTitle">
        <item name="android:padding">1dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextTitle_Normal" parent="TextTitle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="StatText" parent="TextTitle">
        <item name="android:textSize">15sp</item>
    </style>

    /////////////////////////////////////////////////////////////////IMAGES
    <style name="Image_Card">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">75dp</item>
    </style>

    <style name="Icon">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>



</resources>